@inject IDialogService DialogService
@inject ISnackbar Snackbar
@implements IDisposable

@if (allState.ShowCity)
{
    <MudContainer MaxWidth="MaxWidth.False" Class="mt-8">
        <MudPaper Class="p-4 mt-5 mx-auto" Style="width:1200px;" Elevation="6">
            <MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
                <MudText Typo="Typo.h5">Cities</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="AddCity">
                    <MudIcon Icon="@Icons.Material.Filled.AddCircleOutline" Class="me-1" /> Add City
                </MudButton>
            </MudStack>
            <MudTable Items="Cities" Dense="true" Hover="true" Bordered="true" Striped="true">
                <HeaderContent>
                    <MudTh>Id</MudTh>
                    <MudTh>Country</MudTh>
                    <MudTh>City</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.Id</MudTd>
                    <MudTd>@context.Country?.Name</MudTd>
                    <MudTd>@context.Name</MudTd>
                    <MudTd>
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Info" OnClick="@(() => EditCity(context))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => DeleteCity(context))" />
                    </MudTd>
                </RowTemplate>
                <NoRecordsContent>
                    <MudText Class="text-center mt-4" Color="Color.Info">No Cities added yet!</MudText>
                </NoRecordsContent>
            </MudTable>
        </MudPaper>
    </MudContainer>
}

@code {
    public List<City> Cities { get; set; } = new();
    public List<Country> Countries { get; set; } = new();
    City City = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        allState.Action += StateHasChanged;
    }

    private async Task LoadData()
    {
        Cities = await cityService.GetAll(Constants.CityBaseUrl);
        Countries = await countryService.GetAll(Constants.CountryBaseUrl);
    }

    private async Task AddCity()
    {
        var parameters = new DialogParameters
        {
            { "City", new City() },
            { "Countries", Countries }
        };

        var dialog = await DialogService.ShowAsync<CityDialog>("Add City", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
            await LoadData();
    }

    private async Task EditCity(City city)
    {
        var parameters = new DialogParameters
        {
            { "City", city },
            { "Countries", Countries }
        };

        var dialog = await DialogService.ShowAsync<CityDialog>("Update City", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
            await LoadData();
    }

    private async Task DeleteCity(City city)
    {
        var parameters = new DialogParameters
        {
            { "ContentText", $"Are you sure you want to delete {city.Name}?" },
            { "ConfirmButtonText", "Delete" },
            { "CancelButtonText", "Cancel" },
            { "Color", Color.Error }
        };

        var options = new MudBlazor.DialogOptions
            {
                CloseButton = true,
                MaxWidth = MaxWidth.ExtraSmall,
                FullWidth = true
            };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>("Confirm Delete", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            var response = await cityService.DeleteById(city.Id, Constants.CityBaseUrl);
            Snackbar.Add(response.Message, response.Flag ? Severity.Success : Severity.Error);

            if (response.Flag)
                await LoadData();
        }
    }

    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }
}
