@if (ShowDetailsPage)
{
    <MudPaper Class="mx-auto mt-6 p-4" Elevation="4" Style="max-width: 1200px;">
        <MudCard Class="border-success">
            <MudCardHeader>
                <MudText Typo="Typo.h6">@EmployeeDetails.Name Details</MudText>
            </MudCardHeader>

            <MudCardContent>
                <MudGrid Spacing="3">
                    <MudItem xs="12" md="4">
                            <MudImage Src="@EmployeeDetails.Photo" Width="100" Height="100" Alt="@EmployeeDetails.Name"
                                      Class="border border-warning shadow-sm mb-2" />
                            <MudText Typo="Typo.subtitle2"><b>Name:</b> @EmployeeDetails.Name</MudText>
                            <MudText Typo="Typo.subtitle2"><b>Job Title:</b> @EmployeeDetails.JobName</MudText>
                            <MudText Typo="Typo.subtitle2"><b>Telephone:</b> @EmployeeDetails.TelephoneNumber</MudText>
                            <MudText Typo="Typo.subtitle2"><b>Address:</b> @EmployeeDetails.Address</MudText>
                    </MudItem>
                    <MudItem xs="12" md="4">
                            <MudText Typo="Typo.h6">Department Information</MudText>
                            <MudText Typo="Typo.subtitle2"><b>General Department:</b> @EmployeeDetails.Branch.Department.GeneralDepartment.Name</MudText>
                            <MudText Typo="Typo.subtitle2"><b>Department:</b> @EmployeeDetails.Branch.Department.Name</MudText>
                            <MudText Typo="Typo.subtitle2"><b>Branch:</b> @EmployeeDetails.Branch.Name</MudText>
                    </MudItem>
                    <MudItem xs="12" md="4">
                            <MudText Typo="Typo.h6">Location Information</MudText>
                            <MudText Typo="Typo.subtitle2"><b>Country:</b> @EmployeeDetails.Town.City.Country.Name</MudText>
                            <MudText Typo="Typo.subtitle2"><b>City:</b> @EmployeeDetails.Town.City.Name</MudText>
                            <MudText Typo="Typo.subtitle2"><b>Town:</b> @EmployeeDetails.Town.Name</MudText>
                    </MudItem>
                </MudGrid>
            </MudCardContent>

            <MudCardActions>
                <MudSpacer />
                <MudButton Color="Color.Error" OnClick="DetailsPageCloseBtnClicked">Close</MudButton>
            </MudCardActions>
        </MudCard>
    </MudPaper>
}

@code {
    [Parameter] public bool ShowDetailsPage { get; set; }
    [Parameter] public Employee EmployeeDetails { get; set; } = new();
    [Parameter] public EventCallback HandleDetailsPageCloseBtnClicked { get; set; }

    async Task DetailsPageCloseBtnClicked() => await HandleDetailsPageCloseBtnClicked.InvokeAsync();
}
