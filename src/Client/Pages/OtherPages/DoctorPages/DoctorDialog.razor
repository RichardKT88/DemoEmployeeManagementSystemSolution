<MudDialog>
    <DialogContent>
        <MudPaper Class="pa-4" Style="width: 320px;">
            <MudForm @ref="_form">
                <MudTextField Label="Employee Id" @bind-Value="Doctor.EmployeeId" Disabled="true" Variant="Variant.Text" Class="mt-4" />

                <MudTextField T="DateTime" Format="yyyy-MM-dd" Label="Date" InputType="InputType.Date" Class="mt-4" @bind-Value="Doctor.Date" />
               
                <MudTextField Label="Medical Diagnose" @bind-Value="Doctor.MedicalDiagnose" Lines="3" Variant="Variant.Outlined" Class="mt-4" />

                <MudTextField Label="Recommendation" @bind-Value="Doctor.MedicalRecommendation" Lines="3" Variant="Variant.Outlined" Class="mt-4" />

                <MudStack Row Justify="Justify.FlexEnd" Class="mt-6">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Save">Save</MudButton>
                    <MudButton OnClick="Cancel" Color="Color.Secondary" Variant="Variant.Outlined">Cancel</MudButton>
                </MudStack>
            </MudForm>
        </MudPaper>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Doctor Doctor { get; set; } = new();
    [Inject] private ISnackbar Snackbar { get; set; } = default!;

    private MudForm _form;

    private async void Save()
    {
        await _form.Validate();

        if (_form.IsValid)
        {
            if (Doctor.Id > 0)
            {
                var result = await doctorService.Update(Doctor, Constants.DoctorBaseUrl);
                Snackbar.Add(result.Message, result.Flag ? Severity.Success : Severity.Error);
            }
            else
            {
                var result = await doctorService.Insert(Doctor, Constants.DoctorBaseUrl);
                Snackbar.Add(result.Message, result.Flag ? Severity.Success : Severity.Error);
            }

            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Please fill all required fields.", Severity.Warning);
        }
    }
    private void Cancel() => MudDialog.Cancel();  
}