<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" Model="OvertimeType">
            <MudPaper Class="p-4">
                <MudTextField Label="Name" @bind-Value="OvertimeType.Name" Required="true" For="@(() => OvertimeType.Name)" />
                <MudStack Row Justify="Justify.FlexEnd" Class="mt-6">
                    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">Save</MudButton>
                    <MudButton Color="Color.Secondary" Variant="Variant.Outlined" OnClick="Cancel">Cancel</MudButton>
                </MudStack>
            </MudPaper>
        </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [Parameter] public OvertimeType OvertimeType { get; set; } = new();
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Inject] private ISnackbar Snackbar { get; set; } = default!;

    private MudForm _form = default!;

    private async void Save()
    {
        await _form.Validate();

        if (_form.IsValid)
        {
            if (OvertimeType.Id > 0)
            {
                var result = await overtimeTypeService.Update(OvertimeType, Constants.OvertimeTypeBaseUrl);
                Snackbar.Add(result.Message, result.Flag ? Severity.Success : Severity.Error);
            }
            else
            {
                var result = await overtimeTypeService.Insert(OvertimeType, Constants.OvertimeTypeBaseUrl);
                Snackbar.Add(result.Message, result.Flag ? Severity.Success : Severity.Error);
            }

            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Please fill all required fields.", Severity.Warning);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
