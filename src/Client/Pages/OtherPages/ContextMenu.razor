<MudDialog>  
    <DialogContent>
        <MudStack Spacing="1" AlignItems="AlignItems.Start">
            <MudButton StartIcon="@Icons.Material.Outlined.RemoveRedEye" Color="Color.Info" Variant="Variant.Text" OnClick="ViewClicked">
                View
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Outlined.Edit" Color="Color.Primary" Variant="Variant.Text" OnClick="EditClicked">
                Edit
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Outlined.Delete" Color="Color.Error" Variant="Variant.Text" OnClick="DeleteClicked">
                Delete
            </MudButton>

            <MudDivider />
            <MudButton StartIcon="@Icons.Material.Outlined.Backpack" Color="Color.Success" Variant="Variant.Text" OnClick="AddVacationClicked">
                Add Vacation
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Outlined.PunchClock" Color="Color.Error" Variant="Variant.Text" OnClick="AddOvertimeClicked">
                Add Overtime
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Outlined.LocalHospital" Color="Color.Warning" Variant="Variant.Text" OnClick="AddHealthClicked">
                Add Health
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Outlined.Block" Color="Color.Info" Variant="Variant.Text" OnClick="AddSanctionClicked">
                Add Sanction
            </MudButton>
        </MudStack>
    </DialogContent>
</MudDialog>

@code {

    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public EventCallback HandleViewClicked { get; set; }
    [Parameter] public EventCallback HandleEditClicked { get; set; }
    [Parameter] public EventCallback HandleDeleteClicked { get; set; }
    [Parameter] public EventCallback OnAddVacation { get; set; }
    [Parameter] public EventCallback OnAddOvertime { get; set; }
    [Parameter] public EventCallback HandleAddHealthClicked { get; set; }
    [Parameter] public EventCallback OnAddSanction { get; set; }

    private async Task ViewClicked()
    {        
        await HandleViewClicked.InvokeAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }
    private async Task EditClicked()    
    {
        await HandleEditClicked.InvokeAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }
    private async Task DeleteClicked()
    {
        await HandleDeleteClicked.InvokeAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }
    private async Task AddVacationClicked() => await OnAddVacation.InvokeAsync();
    private async Task AddOvertimeClicked() => await OnAddOvertime.InvokeAsync();
    private async Task AddHealthClicked()
    {
        await HandleAddHealthClicked.InvokeAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }
    private async Task AddSanctionClicked() => await OnAddSanction.InvokeAsync();

}
