<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-2">@ContentText</MudText>
    </DialogContent>

    <DialogActions>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="() => MudDialog.Close(DialogResult.Ok(true))">
            @ConfirmButtonText
        </MudButton>
        <MudButton Color="Color.Default" Variant="Variant.Text" OnClick="() => MudDialog.Cancel()">
            @CancelButtonText
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string ContentText { get; set; } = "Are you sure?";
    [Parameter] public string ConfirmButtonText { get; set; } = "Yes";
    [Parameter] public string CancelButtonText { get; set; } = "Cancel";
    [Parameter] public Color Color { get; set; } = Color.Primary;
}

